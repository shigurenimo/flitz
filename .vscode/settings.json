{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "jest.autoRun": "off",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.exclude": {
    "**/node_modules": true,
    "*.lock": true,
    "*.log": true,
    "*.tsbuildinfo": true,
    ".blitz**": true,
    ".husky": true,
    ".next": true,
    ".vercel": true,
    ".yarn": true,
    ".yarnrc.yml": true
  },
  "search.exclude": {
    "yarn.lock": true
  },
  "cSpell.words": [
    "Autosize",
    "blitzjs",
    "chakra",
    "flitz",
    "followee",
    "Followees",
    "maxage",
    "notificaiton",
    "tsbuildinfo",
    "tsyringe",
    "unfollow"
  ]
}
